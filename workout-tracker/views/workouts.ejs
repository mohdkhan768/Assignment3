<!-- views/workouts.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Workouts</title>
  <link rel="stylesheet" href="/css/style.css"> <!-- Link to your custom CSS file -->
<!-- Include the Header Partial -->
  <%- include('partials/header') %>
  </head>

<body>
  <!-- New Workout Form -->
  <section class="new-workout-form">
    <h2>Add New Workout</h2>
    <form action="/workouts" method="POST">
      <div class="form-group">
        <label for="name">Workout Name</label>
        <input type="text" id="name" name="name" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="duration">Duration (minutes)</label>
        <input type="number" id="duration" name="duration" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        <input type="date" id="date" name="date" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" class="form-control"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Add Workout</button>
    </form>
  </section>

  <section class="workouts-list">
  <h2>All Workouts</h2>
  <ul>
    <% workouts.forEach(workout => { %>
      <li>
        <h3><%= workout.name %></h3>
        <p><p1>Duration:</p1> <%= workout.duration %> minutes</p>
        <p><p1>Date:</p1> <%= workout.date.toLocaleDateString() %></p>
        <p><p1>Description:</p1> <%= workout.description || 'No description provided.' %></p>
        
        <!-- Link to edit -->
        <a href="/workouts/edit/<%= workout._id %>" class="btn btn-primary">Edit</a>

        <!-- Delete button with confirmation -->
          <form action="/workouts/<%= workout._id %>?_method=DELETE" method="POST" class="delete-form" onsubmit="return confirmDelete()">
            <button type="submit" class="btn btn-danger">Delete</button>
          </form>
        </li>
      <% }); %>
    </ul>
  </section>

<%- include('partials/footer') %>

<script>
  // Delete confirmation
  function confirmDelete() {
    return confirm("Are you sure you want to delete this workout?");
    
  }
    function deletedmessage() {
    return confirm("deleetd")    
    }
    

</script>
</body>
</html>
