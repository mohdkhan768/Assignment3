<!-- views/workouts.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Your Workouts</title>
  <link rel="stylesheet" href="/css/style.css"> <!-- Link to your custom CSS file -->
</head>
<body>
  <!-- Include the Header Partial -->
  <%- include('partials/header') %>

  <!-- New Workout Form -->
  <section class="new-workout-form">
    <h2>Add New Workout</h2>
    <form action="/workouts" method="POST">
      <div class="form-group">
        <label for="name">Workout Name</label>
        <input type="text" id="name" name="name" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="duration">Duration (minutes)</label>
        <input type="number" id="duration" name="duration" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="date">Date</label>
        <input type="date" id="date" name="date" class="form-control" required>
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" class="form-control"></textarea>
      </div>
      <button type="submit" class="btn btn-primary">Add Workout</button>
    </form>
  </section>

  <!-- List of Workouts -->
  <section class="workouts-list">
    <h2>All Workouts</h2>
    <ul>
      <!-- Loop through workouts and display each one -->
      <% workouts.forEach(workout => { %>
        <li>
          <h3><%= workout.name %></h3>
          <p>Duration: <%= workout.duration %> minutes</p>
          <p>Date: <%= workout.date.toLocaleDateString() %></p>
          <p><%= workout.description || 'No description provided.' %></p>
        </li>
      <% }); %>
    </ul>
  </section>

  <!-- Include the Footer Partial -->
  <%- include('partials/footer') %>
</body>
</html>
