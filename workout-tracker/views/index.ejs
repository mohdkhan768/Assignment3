<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Workout Tracker</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Header -->
  <%- include('./partials/header') %>

  <div class="container my-4">
    <h1 class="text-center mb-4">Workout Tracker</h1>

    <!-- Button to Add New Workout -->
    <div class="text-end mb-3">
      <a href="/new" class="btn btn-primary">Add New Workout</a>
    </div>

    <!-- Workout Table -->
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Date</th>
          <th>Type</th>
          <th>Duration (minutes)</th>
          <th>Calories Burned</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% if (workouts.length > 0) { %>
          <% workouts.forEach(workout => { %>
            <tr>
              <td><%= workout.date.toISOString().split('T')[0] %></td>
              <td><%= workout.type %></td>
              <td><%= workout.duration %></td>
              <td><%= workout.calories %></td>
              <td>
                <a href="/<%= workout._id %>/edit" class="btn btn-sm btn-warning">Edit</a>
                <form action="/<%= workout._id %>?_method=DELETE" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this workout?');">
                  <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } else { %>
          <tr>
            <td colspan="5" class="text-center">No workouts found. Click "Add New Workout" to start tracking your progress!</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>

  <!-- Footer -->
  <%- include('./partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
