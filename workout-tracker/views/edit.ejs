<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Workout</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Header -->
  <%- include('./partials/header') %>

  <div class="container my-4">
    <h1 class="text-center">Edit Workout</h1>

    <!-- Edit Workout Form -->
    <form action="/<%= workout._id %>?_method=PUT" method="POST" class="mt-4">
      <div class="mb-3">
        <label for="date" class="form-label">Date</label>
        <input type="date" id="date" name="date" class="form-control" value="<%= workout.date.toISOString().split('T')[0] %>" required>
      </div>

      <div class="mb-3">
        <label for="type" class="form-label">Workout Type</label>
        <input type="text" id="type" name="type" class="form-control" value="<%= workout.type %>" required>
      </div>

      <div class="mb-3">
        <label for="duration" class="form-label">Duration (minutes)</label>
        <input type="number" id="duration" name="duration" class="form-control" value="<%= workout.duration %>" required>
      </div>

      <div class="mb-3">
        <label for="calories" class="form-label">Calories Burned</label>
        <input type="number" id="calories" name="calories" class="form-control" value="<%= workout.calories %>" required>
      </div>

      <div class="text-center">
        <button type="submit" class="btn btn-success">Update Workout</button>
        <a href="/" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>

  <!-- Footer -->
  <%- include('./partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
