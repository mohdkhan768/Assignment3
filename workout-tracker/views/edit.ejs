<!-- views/edit.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Edit Workout</title>
  <link rel="stylesheet" href="/css/style.css">
  <a href="/new" class="btn btn-primary">Add New Workout</a>

</head>
<body>
  <!-- Include the Header Partial -->
  <%- include('partials/header') %>

  <section class="edit-workout-form">
    <h2>Edit Workout</h2>
    <!-- Form for editing an existing workout -->
    <form action="/workouts/<%= workout._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <label for="name">Workout Name:</label>
        <input type="text" id="name" name="name" value="<%= workout.name %>" required>
      </div>

      <div class="form-group">
        <label for="duration">Duration (in minutes):</label>
        <input type="number" id="duration" name="duration" value="<%= workout.duration %>" required>
      </div>

      <div class="form-group">
        <label for="description">Description:</label>
        <textarea id="description" name="description"><%= workout.description %></textarea>
      </div>

      <button type="submit">Update Workout</button>
    </form>
  </section>

  <!-- Include the Footer Partial -->
  <%- include('partials/footer') %>
</body>
</html>
